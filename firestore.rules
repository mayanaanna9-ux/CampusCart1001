
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for concise and reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Manages user profile documents.
     */
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow update, delete: if isOwner(userId);
      // Ensure createdAt is a server timestamp on creation and cannot be modified on update.
      allow create: if isOwner(userId) && request.resource.data.id == userId && request.resource.data.createdAt == request.time;

      /**
       * @description Manages message threads within a user's private data tree.
       */
      match /messageThreads/{threadId} {
        // Create a thread if the authenticated user is a participant. This rule is key for batch writes.
        allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;

        // Read, update, or delete a thread if the user is a participant.
        // This is checked against the document that already exists in the database.
        allow read, update, delete: if isSignedIn() && request.auth.uid in resource.data.participants;
        
        /**
         * @description Manages messages within a specific message thread.
         */
        match /messages/{messageId} {
          // Allow read and write if the user is a participant of the parent thread.
          // This requires a 'get' call to the parent thread document.
          allow read, write: if isSignedIn() && get(/databases/$(database)/documents/users/$(userId)/messageThreads/$(threadId)).data.participants.hasAny([request.auth.uid]);
        }
      }
    }

    /**
     * @description Manages item listings. Items are public to read, but only the seller can modify them.
     */
    match /items/{itemId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.sellerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.sellerId == request.auth.uid;
    }

    /**
     * @description Provides public, read-only access to item categories.
     */
    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Provides public, read-only access to pre-defined user avatars.
     */
    match /avatars/{avatarId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}
